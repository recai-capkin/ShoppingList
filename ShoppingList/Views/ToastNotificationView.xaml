<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.ToastNotificationView"
             x:Name="ToastNotification">

    <Frame x:Name="ToastFrame"
           BackgroundColor="#f5a442"
           IsVisible="False"
           CornerRadius="8"
           Padding="10"
           HorizontalOptions="FillAndExpand"
           VerticalOptions="End"
           Margin="20">
        <Label x:Name="ToastMessage" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Frame>

</ContentView>
