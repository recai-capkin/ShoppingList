<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingList.Views"
    Shell.FlyoutBehavior="Disabled">
    <Shell.Resources>
        <ResourceDictionary>
            <Color x:Key="NavigationBarColor">#FFE5B4</Color>
            <Color x:Key="NavigationBarTextColor">#000000</Color>
        </ResourceDictionary>
    </Shell.Resources>
    <FlyoutItem Title="Products" Icon="icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:ProductsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Cart" Icon="icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:CartPage}" />
    </FlyoutItem>

</Shell>
